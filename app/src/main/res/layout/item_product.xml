<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:minHeight="174dp"
        android:minWidth="174dp"
        android:src="@drawable/balanza"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_linio_plus_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_plus"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_linio_plus_level_48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_plus_48"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_refurbished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_refurbished"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_new"
            android:visibility="gone"/>


        <ImageView
            android:id="@+id/iv_international"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_international"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_warranty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_garantia"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_freeshipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_freeshipping"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_fullfill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fullfill"
            android:visibility="gone"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_fav_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_fav_pink_white_circle"/>


</RelativeLayout>